{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "outDir": "./dist",
    "rootDir": ".",
    "baseUrl": ".",
    "paths": {
      "@shared/*": ["./shared/*"]
    },
    "resolveJsonModule": true,
    "skipLibCheck": true
  },
  "include": ["server/**/*.ts", "shared/**/*.ts", "api/**/*.ts"]
}
