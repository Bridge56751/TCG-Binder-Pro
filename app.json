{
  "expo": {
    "name": "TCG Binder",
    "slug": "tcg-binder",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "cardvault",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/images/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#E8882D"
    },
    "ios": {
      "supportsTablet": false,
      "bundleIdentifier": "com.cardvault",
      "infoPlist": {
        "NSCameraUsageDescription": "TCG Binder needs camera access to scan your trading cards"
      }
    },
    "android": {
      "package": "com.cardvault",
      "adaptiveIcon": {
        "backgroundColor": "#E8882D",
        "foregroundImage": "./assets/images/android-icon-foreground.png",
        "backgroundImage": "./assets/images/android-icon-background.png",
        "monochromeImage": "./assets/images/android-icon-monochrome.png"
      }
    },
    "web": {
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      [
        "expo-router",
        {
          "origin": "https://replit.com/"
        }
      ],
      "expo-font",
      "expo-web-browser",
      [
        "expo-camera",
        {
          "cameraPermission": "Allow TCG Binder to use your camera to scan trading cards"
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true,
      "reactCompiler": true
    }
  }
}
